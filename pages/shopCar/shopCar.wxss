.board{
    position: fixed;
    width:100%;
    height: 36px;
    display: flex;
    bottom: 0;
    background: #fff;
    /* border-top:1px solid #939393; */
    color:#000;
    justify-content: space-between;
    align-items: center;
    font-size:14px;
}
.board-info{
    flex:1;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.sale{
    padding: 0 60rpx;
    height: 30px;
    line-height: 30px;
    text-align: center;
    color:#fff;
    border-radius: 15px;
}
.checkbox{
    justify-content: space-between;
    align-items: center;
    display: flex;
    margin-right:12rpx;
}
.money{
    font-size:16px;
}
.checkboxs{
    width: 10px;
}
.good-img{
    width:200rpx;
    height: 200rpx;
    background-color:#606060;
}
.check-item{
    width:10%;
}
.good-info{
    flex:1;
    margin-left: 10rpx;
}
.clearGood{
    width: 30rpx;
    height: 30rpx;
    background-size: contain;
    position: absolute;
    top: 30rpx;
    right:30rpx;
    z-index: 10;
}
.item-wrap{
    position: relative;
    margin-bottom: 28rpx;
}
.good-txt{
    flex:1;
    margin-left: 12rpx;
}
.txt text{
    width: 78%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
}

.spec{
    color: #939393;
}
.operate{
    margin-top: 30rpx;
    width: 100%;
}
.opte{
    /* width: 40%; */
    text-align: right;
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
}
.opte text{
    border: 1px solid #cecece;
    border-radius: 4rpx;
    padding: 0 20rpx;
    color:#cecece;
}
.price-one{
    flex:1;
    text-align: left;
    display: block;
}
.num {
    padding: 0 36rpx;
}
